<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogify</title>
    <%- include('./partials/head') %>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="500px" alt="">
        <pre><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
       <img src="<%= blog.createdBy.profilephoto %>" width="100px" ><%= blog.createdBy.fullName %>
    </div>
    <div class="container mt-3">
       <h1>Comments (<%= comments.length %>)</h1>
     <% if (user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
            <div class="mb-3">
                <input type="text" class="form-control" 
                name="content" placeholder="Enter your comment">
                <button class="btn btn-sm btn-primary" type="submit">Add</button>
            </div>
        </form> 
     <% } %>
     <div class="mt-3">
        <% comments.forEach(comment => { %>
            <img src="<%= comment.createdBy.profilephoto %>" width="100px" ><%= comment.createdBy.fullName %>:
            <pre><%= comment.content %></pre>
        <% }) %>
      </div>
    </div>
    
    <% if (user && user._id.toString() === blog.createdBy._id.toString()) { %>
    <div class="container mt-4">
        <form action="/blog/<%= blog._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">Delete Post</button>
        </form>
    </div>
    <% } %>

    <%- include('./partials/scripts') %>
</body>
</html>
