<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogify</title>
</head> <%- include('./partials/head') %>
<body>
    <%- include ('./partials/nav') %>

    <div class="container mt-5">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
          <% blogs.forEach(blog => { %>
            <div class="col">
              <div class="card h-100 shadow-sm">
                <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %>">
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <p class="card-text flex-grow-1"><%= blog.body.substring(0, 100) %>...</p>
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">View</a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    <!-- <%= JSON.stringify(blogs)%> -->
    <%- include('./partials/scripts') %>
</body>
</html>